{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "route_api",
        "ClusterId": "cluster_api",
        "Match": {
          "Hosts": [ "localhost" ],
          "Path": "/api/{*remainder}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    ],
    "Clusters": {
      "cluster_api": {
        "Destinations": {
          "cluster_api/destination1": {
            "Address": "https://localhost:44356/"
          }
        }
      }
    }
  }
}